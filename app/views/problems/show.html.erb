<div class="container">
<h2><%= @problem.title %></h2>

<div id="question-content"
  <p>
    <strong>Difficulty: </strong>
    <%= @problem.difficulty %>
  </p>

  <p>
    <strong>Description: </strong>
    <%= @problem.description %>
  </p>
</div>

<% if session[:user].nil? %>
  <!-- If not logged in, do not display anything for edit/delete. -->
<% else %>
  <% if session[:user].is_instructor? %>
    <%= link_to 'Edit', edit_problem_path(@problem) %>
    <%= button_to 'Delete', problem_path(@problem), method: :delete, data: { confirm: 'Are you sure you want to delete this problem?' } %>
  <% end %>
<% end %>

<%= link_to 'Back to problem list', problems_path %>
</div>
