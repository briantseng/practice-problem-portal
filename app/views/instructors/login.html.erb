<link rel = "stylesheet" type = "text/css" href = "login.css">

<div class = "login-container">
<%= flash[:notice] %>
<h2>Instructor Login</h2>

<%= form_tag '/instructors/login' do %>
  <div><%= text_field_tag :email, nil, placeholder: 'Email Address', style:"height:25px"%> </div>
  <div><%= password_field_tag :password, nil, placeholder: 'Password', style:"height:25px"%> </div>
  <div> <%= check_box_tag(:remember_me) %> Remember Me</div>
  <br></br>
  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>
</div>
